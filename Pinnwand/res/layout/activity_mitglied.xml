<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
	android:layout_height="match_parent"
	android:layout_width="match_parent">
		
	<Button
	    android:id="@+id/kontext_menu"
	    android:text="KontextmenÃ¼"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
	/>
	
    <TextView
        android:id="@+id/TopTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/kontext_menu"
        android:text="User Daten"
        android:textSize="30sp" />

	<TextView
	    android:id="@+id/country"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/bDay"
	    android:text="Wohnort"
	    android:textSize="20sp" />

	<TextView
	    android:id="@+id/firstname"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/TopTV"
	    android:layout_marginTop="86dp"
	    android:text="Vorname"
	    android:textSize="20sp" />

	<TextView
	    android:id="@+id/lastname"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/firstname"
	    android:text="Nachname"
	    android:textSize="20sp" />

	<TextView
	    android:id="@+id/bDay"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/lastname"
	    android:text="Geburtsdatum"
	    android:textSize="20sp" />

	<TextView
	    android:id="@+id/username"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/country"
	    android:layout_marginTop="28dp"
	    android:text="Username"
	    android:textSize="20sp" />

	<TextView
	    android:id="@+id/email"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/country"
	    android:text="email"
	    android:textSize="20sp" />
	
</RelativeLayout>
