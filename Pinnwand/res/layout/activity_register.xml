<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
	android:layout_height="match_parent"
	android:layout_width="match_parent">
	
	<TextView
	    android:id="@+id/TopTV"
	    android:layout_width="wrap_content"
	    android:text="PersÃ¶nliche Daten"
	    android:layout_height="wrap_content"
	 />
	
	<EditText
	    android:id="@+id/edit_firstName"
		android:layout_width="match_parent"
		android:layout_marginBottom="10dp"
		android:layout_height="wrap_content"
		android:hint="Vorname"
		android:layout_below="@+id/TopTV"
	/>
	
	<EditText
	    android:id="@+id/edit_lastName"
		android:layout_width="match_parent"
		android:layout_marginBottom="10dp"
		android:layout_height="wrap_content"
		android:hint="Nachname"
		android:layout_below="@+id/edit_firstName"
	/>
	
	<EditText
	    android:id="@+id/edit_bDay"
		android:layout_width="match_parent"
		android:layout_marginBottom="10dp"
		android:layout_height="wrap_content"
		android:hint="Geburtsdatum"
		android:layout_below="@+id/edit_lastName"
	/>
	
	<EditText
	    android:id="@+id/edit_country"
		android:layout_width="match_parent"
		android:layout_marginBottom="10dp"
		android:layout_height="wrap_content"
		android:hint="Wohnort"
		android:layout_below="@+id/edit_bDay"
	/>
	
	<EditText
	    android:id="@+id/edit_Email"
		android:layout_width="match_parent"
		android:layout_marginBottom="10dp"
		android:layout_height="wrap_content"
		android:hint="Email"
		android:layout_below="@+id/edit_country"
	/>
	
	<TextView
	    android:id="@+id/secondTV"
	    android:layout_width="wrap_content"
	    android:text="Forum Daten"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/edit_Email"
	 />
	
	<EditText
	    android:id="@+id/edit_Username"
		android:layout_width="match_parent"
		android:layout_marginBottom="10dp"
		android:layout_height="wrap_content"
		android:hint="@string/username"
		android:layout_below="@+id/secondTV"
	/>
	
	<EditText
	    android:id="@+id/edit_Password"
		android:layout_width="match_parent"
		android:layout_marginBottom="10dp"
		android:layout_height="wrap_content"
		android:hint="@string/password"
		android:layout_below="@+id/edit_Username"
		android:inputType="textPassword"
	/>
	
	<Button
	    android:id="@+id/b_SignUp"
	    android:text="@string/signup"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/edit_Password"
	/>
	
	<TextView
        android:id="@+id/text_Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Return to Log in"
        android:layout_below="@+id/b_SignUp"
        android:textStyle="bold" />
</RelativeLayout>
